<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/MainDrawerPacient.call"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:srcCompat="@mipmap/call_medic"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/MainDrawerPacient.Finalizare"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:srcCompat="@mipmap/btn_finalizare"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/MainDrawerPacient.Anulare"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:srcCompat="@mipmap/btn_anulare"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MainDrawerPacient.message"
        android:text="Test"
        android:maxWidth="280dp"
        android:textAlignment="center"
        android:layout_marginBottom="180dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>
</RelativeLayout>